{
  "compilerOptions": {
    "module": "commonJS",
    "types": ["jest"],
    "esModuleInterop": true,
    "target": "ES2019",
    "allowJs": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": [".templates"]
}
